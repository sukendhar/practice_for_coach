%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %div
    = f.label :email
    %br/
    = f.email_field :email
  %div
    = f.label :password
    %br/
    = f.password_field :password
  %div
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %div
    = f.label :sign_up_as_student
    = f.check_box :sign_up_as_student
    %br
    = f.label :sign_up_as_credentialled_coach
    = f.check_box :sign_up_as_credentialled_coach

  %div= f.submit "Sign up"
= render :partial => "devise/shared/links"